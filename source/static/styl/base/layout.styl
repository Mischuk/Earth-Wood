/*!=========================
      Base grid styles
==========================*/
html, body
  height 100%
body
  light()
  font-size 18px
  line-height 1.2
  color $black
  background #fff
  &:before
    content ''
    position fixed
    left 0
    top 0
    width 100%
    height 500px
    z-index 1
    box-shadow inset 0 350px 250px -150px rgba(0,0,0,.8)

.wrapper
  clearfix()
  position relative
  width $wrapper
  height 100%
  padding-left 15px
  padding-right 15px
  margin-left auto
  margin-right auto
  @media screen and (max-width: 1250px)
    width 100%