.m_s9
  background #fff
  position relative
  z-index 100
  padding 80px 0
  overflow hidden
  @media screen and (max-width: 767px)
    padding 30px 0
  .section-title
    margin-bottom 40px
    @media screen and (max-width: 1200px)
      padding-right 300px
    @media screen and (max-width: 992px)
      padding-right 0
  .paragraph
    padding 10px 0
    padding-right 445px
    @media screen and (max-width: 992px)
      padding-right 0
  .action
    margin-top 40px
    padding-left 20px
    @media screen and (max-width: 992px)
      position static
      margin 20px auto
      padding-left 0
      text-align center
    @media screen and (max-width: 568px)
      width 100%
      left 0
      margin-left 0
      line-height 1
      height auto
      margin-bottom 0
    a
      display block
      width 350px
      height 70px
      line-height 66px
      border-radius 50px
      color #f69e20
      text-transform uppercase
      @media screen and (max-width: 992px)
        display inline-block
        vertical-align middle
      @media screen and (max-width: 568px)
        display inline-block
        vertical-align middle
        width 90%
        padding 10px 20px
        height auto
        line-height 1
        margin-bottom 0
      &:hover
        color #fff
  .image
    position absolute
    right 15px
    top 24px
    height 410px
    width 665px
    border 15px solid #eaeaea
    z-index -1
    @media screen and (max-width: 992px)
      display none
    &:after
      content ''
      width 436px
      height 468px
      position absolute
      right -45px
      bottom -15px
      background url("../images/s9/image.png") no-repeat 0 0

