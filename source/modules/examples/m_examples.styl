.m_examples
  .mfp-content
    text-align center
    .frame
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      padding-bottom 115px
      padding-top 15px
      padding-left 15px
      padding-right 15px
      @media screen and (max-width: 590px)
        padding-bottom 145px
      .lines
        width 100%
        height 100%
        border 15px solid #fff
  .mfp-arrow
    display none !important
  .mfp-figure
    overflow hidden
    position relative
    padding-bottom 100px
  .mfp-top-bar
    position absolute
    left 50%
    top 0
    width 80%
    margin-left -40%
    .mfp-title
      brad()
      font-size 24px
      line-height 1
      position relative
      width 100%
      padding 20px 65px 20px 35px
      background #262626
      @media screen and (max-width: 767px)
        font-size 18px
    .mfp-close
      height 50px
      width 50px
      right 0
      left auto
      top 50%
      margin-top -25px
      padding-right 0
      font-size 0
      cursor pointer
      border-left 1px solid #1b1b1b
      &:after
        content ''
        position absolute
        left 50%
        top 50%
        background url('../images/close.png') no-repeat 0 0
        width 17px
        height 17px
        margin-left -(@width/2)
        margin-top -(@height/2)
        opacity 1
      &:hover
        &:after
          background-position 1px -33px
  .mfp-bottom-bar
    background #fff
    margin-top -100px
    padding-right 230px
    @media screen and (max-width: 590px)
      margin-top -130px
      height 130px
    @media screen and (max-width: 480px)
      padding-right 150px
    .mfp-navs
      right 0
      top 0
      width 230px
      height 100px
      position absolute
      padding 0 75px
      @media screen and (max-width: 590px)
        height 130px
      @media screen and (max-width: 480px)
        width 150px
      &:after
        content ''
        position absolute
        left 0
        height 66px
        width 1px
        background #b2b2b2
        top 50%
        margin-top -(@height/2)
      .mfp-custom-arrows
        cursor pointer
        width 25px
        height 17px
        position absolute
        top 50%
        margin-top -(@height/2)
        z-index 10
        &.mfp-prev
          left 30px
          background url('../images/arrows.png') no-repeat -33px -48px
          &:hover
            background-position -33px -24px
        &.mfp-next
          right 30px
          background url('../images/arrows.png') no-repeat 0 -48px
          &:hover
            background-position 0 -24px
      .mfp-counter
        brad()
        position static
        color #a1a1a1
        font-size 20px
        line-height 100px
        @media screen and (max-width: 590px)
          line-height 130px
        @media screen and (max-width: 480px)
          display none
        .large
          font-size 26px
        .curr
          display inline-block
          vertical-align bottom
          color $black
          font-size 26px
    .mfp-columns
      height 100px
      background #fff
      display table
      width 100%
      line-height 20px
      padding 0 30px
      @media screen and (max-width: 767px)
        display block
        text-align left
      @media screen and (max-width: 480px)
        padding 0 10px
      .column
        display table-cell
        vertical-align middle
        padding-right 10px
        @media screen and (max-width: 767px)
          display block
          padding-top 5px
          padding-bottom 5px
        @media screen and (max-width: 590px)
          line-height 1.1
          padding-top 6px
          padding-bottom 6px
        @media screen and (max-width: 360px)
          padding-top 2px
          padding-bottom 2px
      .column-title
        regular()
        font-size 16px
        text-align left
        @media screen and (max-width: 767px)
          display inline-block
          vertical-align middle
        @media screen and (max-width: 590px)
          display block
          font-size 14px
      .column-desc
        brad()
        color #f67a03
        font-size 18px
        text-align left
        @media screen and (max-width: 767px)
          display inline-block
          vertical-align middle
          padding-left 10px
        @media screen and (max-width: 590px)
          display block
          font-size 14px
          padding-left 0