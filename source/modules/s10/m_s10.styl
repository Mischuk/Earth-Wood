.m_s10
  position relative
  z-index 100
  background url("../images/s10/bg.jpg") no-repeat 50%
  background-size cover
  background-attachment fixed
  color #fff
  text-align center
  padding 80px 0
  box-shadow: inset 0 0 5px rgba(0,0,0,0.2);
  &:before
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background rgba(60, 47, 32, .92)
  .section-title
    color #fff
    line-height 1
  .column
    float left
    width 33.333%
    padding 0 25px
    &:hover
      .icon
        background: rgba(246,157,32,1);
        background: -moz-linear-gradient(top, rgba(246,157,32,1) 0%, rgba(255,123,0,1) 100%);
        background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(246,157,32,1)), color-stop(100%, rgba(255,123,0,1)));
        background: -webkit-linear-gradient(top, rgba(246,157,32,1) 0%, rgba(255,123,0,1) 100%);
        background: -o-linear-gradient(top, rgba(246,157,32,1) 0%, rgba(255,123,0,1) 100%);
        background: -ms-linear-gradient(top, rgba(246,157,32,1) 0%, rgba(255,123,0,1) 100%);
        background: linear-gradient(to bottom, rgba(246,157,32,1) 0%, rgba(255,123,0,1) 100%);
    &:nth-child(1)
      .paragraph:after
        content "01"
      .icon:after
        background-position 0 0
        width 54px
        height 60px
        margin-left -(@width/2)
        margin-top -(@height/2)
      &:hover
        .icon:after
          background-position -78px 0
    &:nth-child(2)
      .paragraph:after
        content "02"
      .icon:after
        background-position 0 -83px
        width 55px
        height 54px
        margin-left -(@width/2)
        margin-top -(@height/2)
      &:hover
        .icon:after
          background-position -78px -83px
    &:nth-child(3)
      .paragraph:after
        content "03"
      .icon:after
        background-position 0 -162px
        width 42px
        height 60px
        margin-left -(@width/2)
        margin-top -(@height/2)
      &:hover
        .icon:after
          background-position -78px -162px
    .icon
      position relative
      width 125px
      height 125px
      margin 10px auto 50px auto
      border-radius 50%
      border 1px solid rgba(255,2552,255,.24)
      &:after
        content ''
        position absolute
        left 50%
        top 50%
        background-image url("../images/s10/icons.png")
        background-repeat no-repeat
    .paragraph
      position relative
      &:after
        brad()
        position absolute
        left 0
        top 0
        width 100%
        height 90px
        line-height 90px
        text-align center
        margin-top -45px
        font-size 90px
        color rgba(255,255,255,.1)
        text-shadow none
        z-index 1
