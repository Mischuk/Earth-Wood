.m_s13
  position relative
  z-index 100
  background #fff
  padding 80px 0
  height 500px
  @media screen and (max-width: 1200px)
    height auto
  @media screen and (max-width: 767px)
    padding 30px 0
  .section-title, .paragraph
    position relative
    z-index 15
  .paragraph
    margin-top -40px
    padding-right 520px
    @media screen and (max-width: 1200px)
      padding-right 0
      padding-left 200px
    @media screen and (max-width: 568px)
      padding-left 0
  .frame
    width 680px
    height 340px
    position absolute
    right 0
    top 0
    background url("../images/s13/bg.jpg") no-repeat 50%
    background-size cover
    padding 15px
    @media screen and (max-width: 1200px)
      position relative
      margin-top 40px
      width 440px
      margin 20px auto 20px
    @media screen and (max-width: 568px)
      width 100%
    &:before
      content ''
      width 100%
      height 100%
      position absolute
      left 0
      top 0
      background rgba(255,255,255,.5)
    .form-wrap
      position relative
      height 100%
      &:after
        content ''
        width 100%
        height 100%
        position absolute
        left 0
        top 0
        background rgba(255,255,255,1)
        z-index 9


