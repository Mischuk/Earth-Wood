.m_s13
  position relative
  z-index 100
  background #fff
  padding 80px 0
  height 500px
  .section-title, .paragraph
    position relative
    z-index 15
  .paragraph
    margin-top -40px
    padding-right 520px
  .frame
    width 680px
    height 340px
    position absolute
    right 0
    top 0
    background url("../images/s13/bg.jpg") no-repeat 50%
    background-size cover
    padding 15px
    &:before
      content ''
      width 100%
      height 100%
      position absolute
      left 0
      top 0
      background rgba(255,255,255,.5)
    .form-wrap
      position relative
      height 100%
      &:after
        content ''
        width 100%
        height 100%
        position absolute
        left 0
        top 0
        background rgba(255,255,255,1)
        z-index 9


