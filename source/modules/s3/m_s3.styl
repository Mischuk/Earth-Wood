.m_s3
  position relative
  z-index 100
  padding 80px 0
  background url("../images/bg-wood.jpg") no-repeat 50% 50%
  background-size cover
  box-shadow inset 0 0 5px rgba(0,0,0,.2)
  @media screen and (max-width: 767px)
    padding 30px 0
  html.no-touchevents &
    background-attachment fixed
  .left
    float left
    width 35%
    @media screen and (max-width: 1200px)
      clearfix()
      width 100%
      float none
      margin-bottom 15px
    .carousel-data
      clearfix()
      width 35%
      position absolute
      left 15px
      bottom 15px
      @media screen and (max-width: 1200px)
        position relative
        left 0
        bottom 0
        float right
        width 100%
        margin-top 15px
      .carousel-info
        position relative
        float left
        width 190px
        height 65px
        line-height 60px
        padding 0 45px
        background #f67a03
        color #fff
        text-align center
        @media screen and (max-width: 1200px)
          float right
        @media screen and (max-width: 568px)
          float none
          margin 0 auto
        .status
          brad()
          text-align center
          line-height 60px
          color #f8b474
          font-size 20px
          line-height 26px
          display inline-block
          vertical-align middle
          .large, .total, .current
            display inline-block
            vertical-align middle
          .current
            color #fff
            font-size 26px
        .slick-arrow
          anim()
          position absolute
          top 50%
          width 25px
          height 17px
          margin-top -(@height/2)
          background-image url('../images/arrows.png')
          background-repeat no-repeat
          opacity .5
          background-color transparent
          text-indent -9999px
          border none
          &:hover
            opacity 1
          &.slick-disabled
            opacity .1
            cursor default
          &.slick-prev
            background-position -33px 0
            left 15px
          &.slick-next
            right 15px
            background-position 0 0
      .carousel-slide-desc
        float right
        width 200px
        font-size 16px
        padding-top 15px
        @media screen and (max-width: 1200px)
          regular()
          position absolute
          left 15px
          bottom -66px
          background rgba(255,255,255,.75)
          z-index 1
          height 36px
          line-height 1
          width auto
          padding 5px
          padding-bottom 15px
  .right
    float right
    width 65%
    @media screen and (max-width: 1200px)
      width 100%
      float none
    .carousel
      height 460px
      .slide
        height 460px
        .image, a
          display block
          width 100%
          height 100%
        .image
          padding 15px
          @media screen and (max-width: 1200px)
            padding 0
        a
          position relative
          &:after
            content ''
            position absolute
            left 15px
            top 15px
            width 680px
            height 400px
            border 15px solid rgba(255,255,255,.5)
            @media screen and (max-width: 1200px)
              width 100%
              height 100%
              left 0
              top 0
              border-color rgba(255,255,255,.75)



