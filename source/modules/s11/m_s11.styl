.m_s11
  position relative
  z-index 100
  background #fff
  padding 80px 0
  @media screen and (max-width: 767px)
    padding 30px 0
  .row
    @media screen and (max-width: 767px)
      text-align center
  .column
    float left
    width 20%
    text-align center
    @media screen and (max-width: 767px)
      float none
      width 31%
      display inline-block
      vertical-align top
      margin-bottom 20px
    @media screen and (max-width: 568px)
      width 100%
      display block
    &:hover
      .icon
        background #dcdcdc
      .counter
        color $orange
    &:last-child
      .counter:after
        display none
    .icon
      anim()
      position relative
      width 144px
      height 144px
      line-height 144px
      border-radius 50%
      margin 0 auto
      background #fff
      &:before
        content ''
        width 126px
        height 126px
        margin-left -(@width/2)
        margin-top -(@height/2)
        position absolute
        left 50%
        top 50%
        background url("../images/s11/r.png") no-repeat 0 0
      img
        position relative
        z-index 1
        display inline-block
        vertical-align middle
    .counter
      brad()
      position relative
      margin-top 20px
      margin-bottom 10px
      font-size 30px
      color #cdcdcd
      @media screen and (max-width: 568px)
        margin-top 10px
      &:after
        content ''
        background: url('../images/arrows.png') no-repeat 0 -24px;
        width: 25px;
        height: 17px;
        position absolute
        right -12px
        top -25px
        @media screen and (max-width: 767px)
          display none
    .paragraph
      regular()
      padding 0 20px