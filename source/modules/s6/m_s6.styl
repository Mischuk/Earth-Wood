.m_s6
  clearfix()
  position relative
  z-index 100
  padding 80px 0
  background #fff
  .item
    position relative
    &:nth-child(even)
      .column
        width 40%
        &:last-child
          width 60%
          padding-top 210px
    &:nth-child(odd)
      .column
        width 60%
        &:first-child
          padding-top 210px
        &:last-child
          width 40%
        .frame:after
          opacity .75
    &:hover
      .url-image
        filter grayscale(0)
      .title
        color #f67a03
    .m_full-st
      top 70px
      &.right
        .section-title
          padding-left 50px
          .image-icon,
          .image-bg
            right 15px
          .image-bg
            img
              right 0
      &.left
        .section-title
          padding-right 25px
          padding-left 340px
          .image-icon,
          .image-bg
            left 15px
          .image-bg
            img
              left 0
      .section-title
        padding-top 45px
        padding-bottom 45px
        line-height 1
        .title
          anim()
          black()
          display block
          font-size 24px
      .image-icon
        position absolute
        width 300px
        height 100%
        text-align center
        top 0
        img
          position absolute
          top 50%
          left 50%
      .image-bg
        position absolute
        top 0
        height 100%
        img
          position absolute
          top 50%
  .row
    margin-bottom 50px
  .column
    float left
  .paragraph
    padding 10px 20px 10px 90px
  .image
    position relative
    height 305px
    padding 15px
    .url-image
      a(1s)
      filter grayscale(1)
  .frame
    position relative
    width 100%
    height 100%
    padding 15px
    &:after
      content ''
      z-index 1
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      border 15px solid #fff
  .action
    margin-top 30px
    a
      display block
      width 475px
      height 70px
      line-height 66px
      border-radius 50px
      color #fff
      margin 0 auto