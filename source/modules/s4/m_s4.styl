.m_s4
  clearfix()
  position relative
  z-index 100
  padding 80px 0
  background #fff
  @media screen and (max-width: 767px)
    padding 30px 0
  .row
    margin-bottom 50px
  .column
    float left
    width 50%
    @media screen and (max-width: 992px)
      width 100%
      float none
    &:last-child
      padding-top 210px
      @media screen and (max-width: 992px)
        padding-top 0
  .paragraph
    padding 10px 20px
  .image
    position relative
    height 370px
    padding 15px
    @media screen and (max-width: 992px)
      margin-bottom 25px
  .frame
    position relative
    width 100%
    height 100%
    padding 15px
    &:after
      content ''
      z-index 1
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      border 15px solid #fff
  .action
    width 475px
    height 70px
    margin 0 auto
    @media screen and (max-width: 680px)
      position static
      margin 20px auto
    @media screen and (max-width: 568px)
      width 100%
      left 0
      margin-left 0
      line-height 1
      height auto
      text-align center
    a
      regular()
      display block
      width 100%
      height 100%
      line-height 66px
      color #f69e20
      border-radius 50px
      @media screen and (max-width: 568px)
        display inline-block
        vertical-align middle
        width 90%
        padding 10px 20px
        line-height 1
      &:hover
        color #fff