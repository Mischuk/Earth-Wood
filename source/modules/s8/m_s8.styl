.m_s8
  position relative
  z-index 100
  padding 80px 0
  background: rgba(255,255,255,1);
  background: -moz-linear-gradient(top, rgba(255,255,255,1) 0%, rgba(243,243,243,1) 100%);
  background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(255,255,255,1)), color-stop(100%, rgba(243,243,243,1)));
  background: -webkit-linear-gradient(top, rgba(255,255,255,1) 0%, rgba(243,243,243,1) 100%);
  background: -o-linear-gradient(top, rgba(255,255,255,1) 0%, rgba(243,243,243,1) 100%);
  background: -ms-linear-gradient(top, rgba(255,255,255,1) 0%, rgba(243,243,243,1) 100%);
  background: linear-gradient(to bottom, rgba(255,255,255,1) 0%, rgba(243,243,243,1) 100%);
  @media screen and (max-width: 767px)
    padding 30px 0
  .left, .right
    position relative
    height 460px
  .left
    float left
    width 65%
    padding-right 30px
    @media screen and (max-width: 1200px)
      padding-right 0
      width 100%
      float none
    .slide
      height 460px
      .image
        position relative
        width 100%
        height 100%
        padding 15px
        @media screen and (max-width: 1200px)
          padding 0
        .url-image
          &:after
            content ''
            position absolute
            left 15px
            top 15px
            width 681px
            height 430px
            border 15px solid rgba(255,255,255,.5)
            @media screen and (max-width: 1200px)
              top 0
              left 0
              width 100%
              height 100%
  .right
    float right
    width 35%
    @media screen and (max-width: 1200px)
      clearfix()
      float none
      width 100%
      height auto
  .carousel-stairs-price
    black()
    position absolute
    left -100%
    background #eee
    padding 0px
    color black
    top -100%
    font-size 22px
    height 65px
    line-height 65px
    width 190px
    z-index 10
    @media screen and (max-width: 1200px)
      left 0
      top 75px
    span
      light()
  .carousel-stairs-data
    position absolute
    left 0
    bottom 0
    float left
    width 190px
    height 65px
    line-height 60px
    color #fff
    text-align center
    padding 0 45px
    background #f67a03
    @media screen and (max-width: 1200px)
      clearfix()
      position relative
      width 100%
      margin-bottom 15px
      height 60px
      padding 0
      background none
    .status
      brad()
      text-align center
      line-height 60px
      color #f8b474
      font-size 20px
      line-height 26px
      display inline-block
      vertical-align middle
      .large, .total, .current
        display inline-block
        vertical-align middle
      .current
        color #fff
        font-size 26px
    .carousel-stairs-navs
      @media screen and (max-width: 1200px)
        position relative
        padding 0 45px
        background #f67a03
        width 190px
        float right
      @media screen and (max-width: 568px)
        float none
        margin 0 auto
    .slick-arrow
      anim()
      position absolute
      top 50%
      width 25px
      height 17px
      margin-top -(@height/2)
      background-image url('../images/arrows.png')
      background-repeat no-repeat
      opacity .5
      background-color transparent
      text-indent -9999px
      border none
      &:hover
        opacity 1
      &.slick-disabled
        opacity .1
        cursor default
      &.slick-prev
        background-position -33px 0
        left 15px
      &.slick-next
        right 15px
        background-position 0 0
