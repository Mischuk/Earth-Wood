.m_full-st
  overflow hidden
  position absolute
  width 100%
  top 140px
  left 0
  z-index 20
  @media screen and (max-width: 992px)
    position static
  &.left
    .wrapper
      padding-right 260px
      .section-title
        padding-left 365px
        padding-right 80px
        &:after
          content ''
          position absolute
          top 0
          left -2000px
          height 100%
          width 2000px
          background #f3f3f3
          @media screen and (max-width: 992px)
            display none
  &.right
    .wrapper
      padding-left 260px
      @media screen and (max-width: 992px)
        padding-left 15px
    .section-title
      padding-left 80px
      padding-right 200px
      @media screen and (max-width: 992px)
        padding-left 200px
        padding-right 0
        margin-bottom 60px
        padding-top 0
        padding-bottom 0
      @media screen and (max-width: 568px)
        padding-left 0
      &:after
        content ''
        position absolute
        top 0
        right -2000px
        height 100%
        width 2000px
        background #f3f3f3
        @media screen and (max-width: 992px)
          display none
    .counter
      right 10px
      left auto
      top 50%
      height 75px
      margin-top -(@height/2)
      @media screen and (max-width: 992px)
        right auto
        left 15px
        padding-left 0
        margin-top 0
      &:after
        left auto
        right -15px
        @media screen and (max-width: 568px)
          right auto
          left 50%
  .section-title
    overflow visible
    position relative
    margin-bottom 0
    padding-top 20px
    padding-bottom 25px
    background #f3f3f3
    @media screen and (max-width: 992px)
      background none
